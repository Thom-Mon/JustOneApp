<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="card_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/color_card_button</item>
        <item name="android:textSize">@dimen/card_text_size</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">@dimen/card_margin_start_end</item>
        <item name="android:layout_marginEnd">@dimen/card_margin_start_end</item>
        <item name="android:text">@string/text_placeholder_card</item>
        <item name="android:shadowColor">#242c7f</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>

