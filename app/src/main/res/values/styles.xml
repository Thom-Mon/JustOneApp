<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="card_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/card_text_size</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">@dimen/card_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/card_margin_start_end</item>
        <item name="android:text">@string/text_placeholder_card</item>
        <item name="strokeWidth">4sp</item>
        <item name="android:shadowColor">#898989</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="card_number">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_number_size</item>=
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>
</resources>


